{
  "compilerOptions": {
    // "removeComments": true,
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "esModuleInterop": true
  },
  "lib": [
    "es2017"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "types"
  ]
}